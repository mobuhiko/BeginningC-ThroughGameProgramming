#include <iostream>
#include <cstring>
#include <string.h>

using namespace std;

int main() {

	string str1 = "Hello, world";
	cout << "General way: str1 is " << str1.size() << " space long\n";

	string* pstr1 = &str1;
	cout << "pointer way: str1 is " << (*pstr1).size() << " space long\n";
	return 0;
}
